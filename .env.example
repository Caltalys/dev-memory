# ============================
# DevMemory Pro — Cấu hình
# ============================

# Đường dẫn dữ liệu
NOTES_DIR=./data/notes
CHROMA_DIR=./data/chroma_db
DB_PATH=./data/dev_memory.db

# Embedding model (tải ~2GB lần đầu)
EMBEDDING_MODEL=BAAI/bge-m3

# LLM (qua Ollama)
# Nếu chạy Docker: dùng host.docker.internal
# Nếu chạy local: dùng http://localhost:11434
LLM_MODEL=qwen2.5:1.5b
LLM_BASE_URL=http://localhost:11434

# Chunking & Search
CHUNK_SIZE=800
CHUNK_OVERLAP=200
TOP_K=5
